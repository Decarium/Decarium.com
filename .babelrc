{
  "sourceMaps": true,
  "presets": [
    [
      "es2015", { "modules": false}
    ],
    "react",
    "stage-0"
  ],
  "plugins": [
    "react-hot-loader/babel",
    "transform-runtime"
  ],
  "env": {
    "test": {
      "plugins": [
        "istanbul",
        "transform-es2015-modules-commonjs"
      ]
    },
    "development": {
      "presets": [
        "react-hmre",
      ]
    },
    "production": {
      "presets": [
        "react-optimize"
      ]
    }
  }
}
